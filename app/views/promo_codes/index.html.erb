<p id="notice"><%= notice %></p>

<h1>Promo Codes</h1>

<table id="all-orders-table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Promo type</th>
      <th>Discount value</th>
      <th>Minimum amount</th>
      <th>Expiration date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @promo_codes.each do |promo_code| %>
      <tr>
        <td><%= promo_code.name %></td>
        <td><%= promo_code.promo_type %></td>
        <td><%= promo_code.discount_value %></td>
        <td><%= promo_code.minimum_amount %></td>
        <td><%= promo_code.expiration_date %></td>
        <td><%= link_to 'Show', promo_code %></td>
        <td><%= link_to 'Edit', edit_promo_code_path(promo_code) %></td>
        <td><%= link_to 'Destroy', promo_code, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

