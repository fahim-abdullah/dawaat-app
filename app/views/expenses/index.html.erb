<div class="container table-container">
	<div class="row">
		<div class="col-12 py-4">
			<h1 class="semi">All Expenditure</h1>
			<%= link_to "New Expense", new_expense_path(delivery_point_id: params[:delivery_point_id]), :class => "btn btn-outline-primary" %>
			<hr>
		</div>
		
    <%= render 'layouts/delivery_point_name', delivery_point: @delivery_point %>

		<div class="col-12">
			<table id="all-orders-table" class="display">
				<thead>
					<tr>
						<th>Date</th>
						<th>Purpose</th>
						<th>User</th>
						<th>Amount</th>
						<th>Actions</th>
					</tr>
				</thead>
				<tbody>
					<% @expenses.each do |expense| %>
					<tr>
						<td><%= expense.created_at.strftime("%A, %d %b %Y") %></td>
						<td><%= expense.purpose %></td>
						<td><%= expense.user %></td>
						<td><%= expense.amount %></td>
						<td>
							<%= link_to 'Edit', edit_expense_path(expense), class: 'btn btn-sm btn-warning' %>
	            <%= link_to 'Delete', expense_path(expense), method: :delete, data: {confirm: "Are you sure?"}, class: 'btn btn-sm btn-danger' %>
						</td>
					</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>