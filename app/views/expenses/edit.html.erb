<div class="container">
	<div class="row">
		<div class="col-12 py-4">
			<h1 class="semi">Edit Expense Details</h1>
			<hr>
		</div>
		<hr>

    <%= render 'layouts/delivery_point_name', delivery_point: @expense.delivery_point %>
	</div>

	<div class="row">
		<div class="col-md-5 col-12">
			<%= form_for @expense do |f| %>

				<div class="form-group row">
					<label class="col-3 col-form-label">Purpose</label>
					<div class="col">
						<%= f.text_field :purpose, class: "form-control", :required => true %>
					</div>
				</div>

				<div class="form-group row">
					<label class="col-3 col-form-label">User</label>
					<div class="col">
						<%= f.text_field :user, class: "form-control" %>
					</div>
				</div>

				<div class="form-group row">
					<label class="col-3 col-form-label">Amount</label>
					<div class="col">
						<%= f.number_field :amount, class: "form-control", :required => true %>
					</div>
				</div>

				<%= f.submit class: "btn btn-success btn-sm" %>

			<% end %>	
		</div>
	</div>
</div>