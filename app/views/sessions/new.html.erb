<div class="container">
	<div class="row">
		<div class="col-12 py-4">
			<h1 class="semi">Login</h1>
			<hr>
		</div>
		<hr>
	</div>

	<div class="row">
		<div class="col-md-5 col-12">
			<%= form_for(:session, :html => {class: "form-horizontal", role: "form"}, url: login_path) do |f| %>

				<div class="form-group row">
					<label class="col-3 col-form-label">Username</label>
					<div class="col">
						<%= f.text_field :username, class: "form-control", :required => true, autofocus: true %>
					</div>
				</div>
				<div class="form-group row">
					<label class="col-3 col-form-label">Password</label>
					<div class="col">
						<%= f.password_field :password, class: "form-control", :required => true, autocomplete: "off" %>
					</div>
				</div>

				<%= f.submit "Login", class: "btn btn-success" %>

			<% end %>

		</div>
	</div>
</div>