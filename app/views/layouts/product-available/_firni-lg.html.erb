<div class="col-md-6">
    <div class="card">
        <img src="<%= asset_path 'available/firni-lg.webp' %>" class="card-img card-img-top">
        <div class="card-body">
            <div class="row">
                <div class="col-7">
                    <div class="item-details">
                        <p class="item-title"><span id="product-5"><%= @firni_lg.name %></span></p>
                        <p class="item-price">
                            <% if @firni_lg.old_price != "" %>
                            <del class="regular">TK <%= @firni_lg.old_price %></del> 
                            <% end %>
                            TK <span id="price-5"><%= @firni_lg.price %></span>
                        </p>
                    </div>
                </div>

                <!--Counter-->
                <div class="col-5 pl-0 my-auto">
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <button type="button" class="btn counter-btn" id="minus-5">
                                <img src="http://bit.ly/2r1QXWq" width="20px" />
                            </button>
                        </div>
                        <input type="text" class="form-control counter" value="0" min="0" id="quantity-5">
                        <div class="input-group-append">
                            <button type="button" class="btn counter-btn" id="plus-5">
                                <img src="http://bit.ly/2PIIUbC" width="20px" />
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
