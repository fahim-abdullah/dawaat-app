<div class="col-md-6 menu-product-item" datapointid="<%= product.delivery_point_id %>" 
  dataid="<%= product.id %>" style="<%= 'display:none;' if product_hidden %>">
    <div class="card">
        <img src="<%= asset_path product.available_image.url %>" class="card-img card-img-top">
        <div class="card-body">
            <div class="row">
                <div class="col-7">
                    <div class="item-details">
                        <p class="item-title"><span id="product-<%= product.id %>"><%= product.name %></span></p>
                        <p class="item-price">
                            <% if product.old_price != 0 %>
                            <del class="regular">TK <%= product.old_price %></del> 
                            <% end %>
                            TK <span class="product-price"><%= product.price %></span>
                        </p>
                    </div>
                </div>

                <!--Counter-->
                <div class="col-5 pl-0 my-auto">
                    <div class="input-group" dataid="<%= product.id %>">
                        <div class="input-group-prepend">
                            <button type="button" class="btn counter-btn minus-quantity">
                                <img src="http://bit.ly/2r1QXWq" width="20px" />
                            </button>
                        </div>
                        <input type="text" class="form-control counter" value="0" min="0" id="quantity-<%= product.id %>">
                        <div class="input-group-append">
                            <button type="button" class="btn counter-btn plus-quantity">
                                <img src="<%= asset_path 'plus3.png' %>" width="20px" />
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
