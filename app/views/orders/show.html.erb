<div class="container table-container show-order-page">

  <div class="print-space-h250"></div>

	<div class="row">
		<div class="col-12 py-4">
			<h1 class="semi">Invoice</h1>
			<hr>
		</div>
		<hr>
	</div>


  <div class="row">
    <div class="col-6">
      <h4 class="pl-2">&nbsp;Dawaat.co</h4>
      <table class="table table-borderless table-responsive">
        <tr><td>Order id</td> <td>:</td> <td><%= @order.id %></td></tr>
        <tr><td>Date</td> <td>:</td> <td><%= @order.created_at.strftime("%d-%m-%Y") %></td></tr>
        <tr><td>Existing</td> <td>:</td> <td><%= @order.existing %></td></tr>
        <tr><td>Status</td> <td>:</td> <td><%= @order.status %></td></tr>
        <tr><td>Delivery point</td> <td>:</td> <td><%= @order.delivery_point.name %></td> </tr>
      </table>
    </div>
    <div class="col-6">
      <h5 class="pl-2">&nbsp;Customer details</h5>
      <table class="table table-borderless table-responsive">
        <tbody>
          <tr><td>Name</td>         <td>:</td> <td><%= @order.fullname %></td></tr>
          <tr><td>Phone</td>        <td>:</td> <td><%= @order.phone %></td></tr>
          <tr>
            <td>Address</td>      
            <td>:</td> 
            <td>
              Flat/house: <%= @order.flathouse %>,
              Road: <%= @order.road %>,
              <%= @order.address %>
                
            </td>
          </tr>
          
          <tr><td>Instructions</td> <td>:</td> <td><%= @order.instructions %></td></tr>
        </tbody>
      </table>
    </div>
  </div>


  <div class="row">
    <div class="col-12 mb-1">
      <table class="table">
        <tr><th>Item</th> <th>Quantity</th> <th>Rate</th> <th class="text-right">Subtotal</th></tr>

        <% @order.order_items.each do |item| %>
          <tr>
            <td><%= item.product_name %></td>
            <td><%= item.quantity %></td>
            <td><%= item.price %></td>
            <td class="text-right"><%= item.price * item.quantity %></td>
          </tr>
        <% end %>
      </table>
    </div>

    <div class="col-6 offset-6">
      <table class="table table-responsive table-right-align">
        <tbody>
          <tr><th colspan="3" class="text-center">Invoice summary</th></tr>
          <tr>
            <td>Subtotal</td> 
            <td>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</td>
            <td class="text-right"><%= @order.subtotal %></td>
          </tr>
          <tr>
            <td>Discount <%= "( #{@order.promo_discount_value}% )" if @order.percentage_discount? %> </td> 
            <td></td> 
            <td class="text-right"><%= @order.discount %></td></tr>
          <tr><td>Total</td> <td>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</td> <td class="text-right"><%= @order.total %></td></tr>
        </tbody>
      </table>
    </div>  
  </div>
	
</div>

<div class="container do-not-print">
  <hr>
  <div class="row">
    <div class="col-6">
      <% back_url = params[:back_url].present? ? "#{params[:back_url]}?delivery_point_id=#{@order.delivery_point_id}" : myorders_path %>
      <%= link_to "Back", back_url, class: "btn btn-primary" %>
    </div>
    <div class="col-6 text-right">
      <%= button_tag "Print", class: "btn btn-info print-current-page" %>
    </div>
  </div>
</div>
