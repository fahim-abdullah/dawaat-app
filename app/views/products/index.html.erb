<div class="container table-container">
	<div class="row">
		<div class="col-12 py-4">
			<h1 class="semi">All Products</h1>
			<hr>
		</div>
		<hr>
    
    <div class="col-12 mb-3">
      <h5>Delivery point: <%= @delivery_point.name %></h5>
      <hr>
    </div>

		<div class="col-12">
			<table id="all-orders-table" class="display">
				<thead>
					<tr>
						<th>Name</th>
						<th>Price</th>
						<th>Status</th>
						<th>Actions</th>
					</tr>
				</thead>
				<tbody>
					<% @products.each do |product| %>
					<tr>
						<td><%= product.name %></td>
						<td><%= product.price %></td>
						<td><%= product.status %></td>
						<td>
							<%= link_to 'Edit', edit_product_path(product), class: 'btn btn-sm btn-warning' %>
	                        <%= link_to 'Delete', product_path(product), method: :delete, data: {confirm: "Are you sure?"}, class: 'btn btn-sm btn-danger disabled' %>
						</td>
					</tr>
					<% end %>
				</tbody>
			</table>

      <%= link_to 'New Product', new_product_path(delivery_point_id: params[:delivery_point_id]), class: 'btn btn-sm btn-primary' %>
		</div>
	</div>
</div>